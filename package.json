{
  "name": "gaze-anchor",
  "version": "1.0.4",
  "description": "A SDK for front-end performance monitoring",
  "license": "MIT",
  "author": {
    "name": "Ethan Teng"
  },
  "keywords": [],
  "main": "./core/core/index.js",
  "exports": {
    ".": {
      "import": "./core/core/index.js",
      "require": "./core/core/index.js"
    },
    "./plugins": {
      "import": "./plugins/plugins/index.js",
      "require": "./plugins/plugins/index.js"
    },
    "./utils": {
      "import": "./publicAPI/publicAPI/index.js",
      "require": "./publicAPI/publicAPI/index.js"
    }
  },
  "types": "types/index.d.ts",
  "typings": "types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:ncc": "jest --no-cache",
    "test:cover": "jest --coverage",
    "test:verbose": "jest --verbose",
    "build": "rm -rf dist && rollup --config",
    "format": "prettier --write \"packages/**/*.ts?(x)\" && eslint --fix --ext .ts packages",
    "format:package": "prettier --write \"packages/**/package.json\"",
    "merge-and-push": "node ./scripts/git.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-strip": "^2.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "rollup": "^2.79.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-node-externals": "^5.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-console": 0,
      "no-undef": 0,
      "no-unused-vars": 0
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "endOfLine": "lf"
  }
}
